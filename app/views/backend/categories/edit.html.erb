<div class="page-header">
  <h2>Редактирование категории "<%= @category.title %>"</h2>
  <div class="row">
    <div class="col-md-6">
      <%= image_tag @category.image_url, style: 'width: 100px;' if @category.image? %>
    </div>
    <div class="col-md-6 text-right">
      <%= link_to 'New Category', new_backend_category_path, class: 'btn btn-primary' %>
      <%= link_to "Categories List", backend_categories_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>

<%= render 'form' %>