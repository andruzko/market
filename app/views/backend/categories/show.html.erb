<div class="page-header">
  <div class="row">
    <div class="col-md-4">
      <h2>Категория "<%= @category.title %>"</h2>
    </div>
    <div class="col-md-8 text-right">
      <%= link_to "Categories List", backend_categories_path, class: 'btn btn-primary' %>
      <%= link_to 'Edit Category', edit_backend_category_path(@category), class: 'btn btn-primary' %>
      <%= link_to 'Delete', backend_category_path(@category), method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <div class="col-md-12">
      <p>
        <%= image_tag @category.image_url, style: 'width: 100%;' %>
      </p>
    </div>
  </div>
  <div class="col-md-6">
    <div class="col-md-12">
      <p><strong>position:</strong> <%= @category.position %></p>
      <p>
        <strong>short_description:</strong> <%= @category.short_description %>
      </p>
      <p>
        <strong>description:</strong> <%= @category.description %>
      </p>
      <p><strong>meta_title:</strong> <%= @category.meta_title %></p>
      <p><strong>meta_description:</strong> <%= @category.meta_description %></p>
      <p><strong>meta_keywords:</strong> <%= @category.meta_keywords %></p>
    </div>
  </div>
</div>