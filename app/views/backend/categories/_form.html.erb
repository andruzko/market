<%= form_for(@category, url: @category.new_record? ? backend_categories_path : backend_category_path, html: {class: 'form-horizontal'}) do |f| %>
  <% if @category.errors.present? %>
    <div role="alert" class="alert alert-danger alert-dismissible fade in">
      <button aria-label="Close" data-dismiss="alert" class="close" type="button"><span aria-hidden="true">×</span></button>
      <% @category.errors.full_messages.each do |error| %>
        <p><%= error %></p>
      <% end %>
    </div>
  <% end %>
  <div class="col-md-6">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :title, "Title" %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :position %>
        <%= f.number_field :position, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :short_description %>
        <%= f.text_area :short_description, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :image, "Фото" %>
        <div class="controls">
          <%= f.file_field :image %>
        </div>
        <div>
          <%= f.label :remote_image_url, "Cсылка на изображение" %>
          <div class="controls">
            <%= f.text_field :remote_image_url, class: 'form-control' %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :meta_title %>
        <%= f.text_field :meta_title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :meta_description %>
        <%= f.text_area :meta_description, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :meta_keywords %>
        <%= f.text_area :meta_keywords, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
  </div>
<% end %>